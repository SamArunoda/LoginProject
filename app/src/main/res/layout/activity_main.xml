<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontol_margin"
    android:paddingRight="@dimen/activity_horizontol_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.supunarunoda.loginproject.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/fingerprint" />

        <TextView
            android:text="Finger Print Scanner"
            android:id="@+id/editText3"
            style="@style/text_view_style"
            android:layout_margin="5dp"
            android:ems="10"
             />

        <EditText
            android:id="@+id/editText"
            style="@style/editText_style"
            android:hint="Username"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editText2"
            style="@style/editText_style"
            android:hint="Passward"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button"
            style="@style/button_style"
            android:text="Log In" />

        <TextView
            android:id="@+id/editText4"
            android:text="Forgot your password?"
            style="@style/text_view_style"
            android:ems="10"
             />
    </LinearLayout>
</RelativeLayout>
